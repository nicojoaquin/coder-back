<!DOCTYPE html>
<html lang="en">
  <%- include ('../template/template') %>
  <body>
    <div class="container mt-5">
      <section class="container w-75">
        <div class="mb-3 d-flex flex-wrap">
          <h2 class="me-3">Lista de productos</h2>
          <button
            class="btn btn-primary"
            data-bs-toggle="modal"
            data-bs-target="#modal-add"
          >
            Agregar producto
          </button>
        </div>
        <table class="table table-striped table-hover table-dark w-100">
          <thead>
            <tr>
              <th scope="col"></th>
              <th scope="col">Nombre</th>
              <th scope="col">Precio</th>
              <th scope="col">Editar/Eliminar</th>
            </tr>
          </thead>
          <tbody id="productsContainer"></tbody>
        </table>
      </section>
      <section class="container mt-5 w-75 p-5">
        <h2 class="mb-3">Chat</h2>
        <ul id="messages"></ul>
        <form id="form-chat" class="form-group d-flex flex-column">
          <input
            type="email"
            id="input-email"
            class="form-control"
            autocomplete="off"
            placeholder="Email"
          />
          <input
            id="input-user"
            class="form-control mt-3"
            autocomplete="off"
            placeholder="Usuario"
          />
          <input
            id="input-msg"
            class="form-control mt-3"
            autocomplete="off"
            placeholder="Mensaje"
          />
          <button type="submit" class="btn btn-success mt-3">Send</button>
        </form>
      </section>
    </div>
    <div
      class="modal fade"
      id="modal-add"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">
              Agrega un producto
            </h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <div class="d-flex justify-content-center">
              <form id="form-add" class="w-100">
                <div class="mb-3">
                  <input
                    type="text"
                    class="form-control"
                    id="title"
                    placeholder="Nombre"
                  />
                </div>
                <div class="mb-3">
                  <input
                    type="text"
                    class="form-control"
                    id="price"
                    placeholder="Precio"
                  />
                </div>
                <div class="mb-3">
                  <label for="thumbnail" class="form-label">Imagen</label>
                  <input class="form-control" type="file" id="thumbnail" />
                </div>
                <button
                  type="submit"
                  class="btn btn-success w-100"
                  data-bs-dismiss="modal"
                >
                  Enviar
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div
      class="modal fade"
      id="confirm-modal"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content p-4">
          <div class="modal-body text-center">
            <h5>Â¿Seguro que deseas eliminar el registro?</h5>
          </div>
          <div class="pb-3 text-center">
            <button
              type="button"
              data-bs-dismiss="modal"
              class="btn btn-primary conf-btn"
            >
              Confirmar
            </button>
            <button
              type="button"
              class="btn btn-secondary cancel-btn"
              data-bs-dismiss="modal"
            >
              Cancelar
            </button>
          </div>
        </div>
      </div>
    </div>

    <script src="https://unpkg.com/dayjs@1.8.21/dayjs.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/delete.js"></script>
  </body>
</html>
